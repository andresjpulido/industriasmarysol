---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Industrias Mar y Sol | Contacto">
  <section class="page mt-36 px-4 md:px-16 pb-16">
    <h2 class="font-bold text-3xl my-8 text-center text-eight">Cont√°ctanos</h2>

    <div class="grid grid-flow-row grid-cols-1 md:grid-cols-2 gap-6">
      <article>
        <form class="flex flex-col gap-6">
          <input
            type="email"
            class="rounded-md border-2 border-four py-3 px-2 text-eight focus:text-eight"
            id="InputEmail"
            aria-describedby="emailHelp"
            placeholder="Correo electronico"
          />

          <input
            type="password"
            class="rounded-md border-2 border-four py-3 px-2 text-eight focus:text-eight"
            id="InputName"
            placeholder="Nombre"
          />

          <textarea
            rows="5"
            id="InputMessage"
            class="rounded-md border-2 border-four py-3 px-2 text-eight focus:text-eight"
            placeholder="Mensaje"></textarea>

          <div class="flex items-center justify-center">
            <button type="submit" class="bg-seven rounded py-3 text-one w-48  font-semibold" aria-label="Send">
              Enviar
            </button>
          </div>
        </form>
      </article>

      <article class="">
        <div class="mx-auto">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3986.8056707586634!2d-80.86168768582661!3d-2.226705138001533!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x902e09067bf3a8ad%3A0xf2101f90ca3fbc6d!2sBarrio%20Amantes%20De%20Sumpa!5e0!3m2!1sen!2snz!4v1585956538160!5m2!1sen!2snz"
            width="100%"
            height="450"  
            aria-hidden="false" 
            title="map"></iframe>
        </div>
      </article>
    </div>
  </section>
</Layout>
